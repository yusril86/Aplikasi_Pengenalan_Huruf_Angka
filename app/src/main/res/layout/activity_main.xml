<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="24dp"
    android:background="@drawable/vector"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi pengenalan huruf, angka dan warna"
        android:layout_marginTop="32dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnLetter"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnLetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_btn_menu"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="HURUF"
        android:textColor="#ffff"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnNumber" />

   <androidx.appcompat.widget.AppCompatTextView
       android:id="@+id/btnNumber"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="25dp"
       android:layout_marginEnd="25dp"
       android:layout_marginTop="24dp"
       android:background="@drawable/bg_btn_menu"
       android:gravity="center"
       android:paddingTop="8dp"
       android:paddingBottom="8dp"
       android:text="ANGKA"
       android:textColor="#ffff"
       android:textSize="24sp"
       android:textStyle="bold"
       android:layout_marginBottom="24dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toTopOf="@id/btnColor" />

   <androidx.appcompat.widget.AppCompatTextView
       android:id="@+id/btnColor"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="25dp"
       android:layout_marginEnd="25dp"
       android:layout_marginTop="24dp"
       android:background="@drawable/bg_btn_menu"
       android:gravity="center"
       android:paddingTop="8dp"
       android:paddingBottom="8dp"
       android:text="WARNA"
       android:textColor="#ffff"
       android:textSize="24sp"
       android:textStyle="bold"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginBottom="24dp"
       app:layout_constraintBottom_toTopOf="@id/btnTentang" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnTentang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_btn_menu"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Tentang"
        android:textColor="#ffff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>